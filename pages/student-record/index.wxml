<view class="view-container">
    <view class="button-container">
        <button id="addBtn" class="btn" bindtap="addRow">增加行</button>
        <button id="deleteBtn" class="btn" bindtap="toggleDeleteMode">删除行</button>
        <button id="addDateBtn" class="btn" bindtap="addDate">增加日期</button>
        <button id="deleteDateBtn" class="btn" bindtap="toggleDeleteDateMode">删除日期</button>
    </view>

    <view class="table-container">
        <table id="studentTable">
            <tr>
                <th>序号</th>
                <th>学生姓名</th>
                <th class="date-cell" bindtap="editDate">
                    <text class="date">9月3日</text><br/>
                    <text class="note">P一元二次测验</text>
                </th>
                <th class="date-cell" bindtap="editDate">
                    <text class="date">9月4日</text><br/>
                    <text class="note">英语作文</text>
                </th>
                <th class="date-cell" bindtap="editDate">
                    <text class="date">9月5日</text><br/>
                    <text class="note">物理实验报告</text>
                </th>
            </tr>
            <block wx:for="{{students}}" wx:key="index">
                <tr>
                    <td class="serial-number">{{index + 1}}</td>
                    <td class="student-name" bindtap="editName">{{item.name}}</td>
                    <td class="status" bindtap="showMenu">{{item.status1}}</td>
                    <td class="status" bindtap="showMenu">{{item.status2}}</td>
                    <td class="status" bindtap="showMenu">{{item.status3}}</td>
                </tr>
            </block>
        </table>
    </view>
</view>
<view id="statusMenu" class="status-menu">
    <view bindtap="setStatus('已交')">已交</view>
    <view bindtap="setStatus('未交')">未交</view>
    <view bindtap="setStatus('A+')">A+</view>
    <view bindtap="setStatus('优')">优</view>
    <view bindtap="setStatus('良')">良</view>
    <view bindtap="setStatus('中')">中</view>
    <view bindtap="setStatus('差')">差</view>
</view>
